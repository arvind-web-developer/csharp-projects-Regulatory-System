                <div class="item">
                    <img src="~/Content/Images/9.jpg" alt="">
                </div>
                <div class="item">
                    <img src="~/Content/Images/10.jpg" alt="">
                </div>
                <div class="item">
                    <img src="~/Content/Images/11.jpg" alt="">
                </div>
